rule "set Publisher"
#for field IMP, copy IMPRINT element to dc.publisher, but strip out values from comma onwards
	when
	exist "//IMP//IMPRINT"
        not exist "//BRJ/*"
	then
	set TEMP"1" to xpath "//IMP//IMPRINT"
	remove substring using regex (TEMP"1",",*([0-9]{4}.)")
remove leading and trailing spaces (TEMP"1")
        remove substring using regex (TEMP"1","(/|:|;|=|,)+$")
	set TEMP"1" in "dc"."publisher"
	end
